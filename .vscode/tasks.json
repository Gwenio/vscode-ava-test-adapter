{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "lint",
			"type": "shell",
			"command": "npx",
			"args": [
				"eslint",
				"${file}"
			],
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "fix",
			"type": "shell",
			"command": "npx",
			"args": [
				"eslint",
				"--fix",
				"${file}"
			],
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "rollup-watch",
			"type": "shell",
			"command": "npx",
			"args": [
				"rollup",
				"-cw"
			],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "rollup-production",
			"type": "shell",
			"command": "npx",
			"args": [
				"rollup",
				"-c"
			],
			"options": {
				"env": {
					"NODE_ENV": "production"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}
