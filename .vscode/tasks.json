{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "lint",
			"type": "shell",
			"command": "pnpx",
			"args": ["eslint", "${file}"],
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "fix",
			"type": "shell",
			"command": "pnpx",
			"args": ["eslint", "--fix", "${file}"],
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "coverage",
			"type": "shell",
			"command": "pnpx",
			"args": [
				"nyc",
				"--clean",
				"--cwd=\"../..\"",
				"--nycrc=\"meta/test/.nycrc.json\"",
				"ava",
				"--config",
				"ava.coverage.js"
			],
			"isBackground": false,
			"options": {
				"cwd": "meta/test"
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "coverage:report",
			"type": "shell",
			"command": "pnpx",
			"args": [
				"nyc",
				"-r",
				"text",
				"--cwd=\"../..\"",
				"--nycrc=\"meta/test/.nycrc.json\"",
				"ava",
				"--config",
				"ava.coverage.js"
			],
			"dependsOn": ["coverage"],
			"isBackground": false,
			"options": {
				"cwd": "meta/test"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "rollup-watch",
			"type": "shell",
			"command": "pnpx",
			"args": ["rollup", "-cw"],
			"isBackground": false,
			"options": {
				"cwd": "meta/build"
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "deps:prepare",
			"type": "shell",
			"command": "pnpx",
			"args": ["gulp", "prepare"],
			"options": {
				"cwd": "meta/deps"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "deps:add",
			"type": "shell",
			"command": "pnpx",
			"args": ["gulp", "prepare"],
			"dependsOn": ["deps:prepare"],
			"options": {
				"cwd": "meta/build"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "rollup:production",
			"type": "shell",
			"command": "pnpx",
			"args": ["rollup", "-c"],
			"dependsOn": ["compile:adapter", "compile:worker", "deps:add"],
			"options": {
				"cwd": "meta/build",
				"env": {
					"NODE_ENV": "production"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "pnpm",
			"args": ["recursive", "run", "clean"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clean:build",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "clean"],
			"isBackground": false,
			"options": {
				"cwd": "meta/build"
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clear-test-cache",
			"type": "shell",
			"command": "pnpx",
			"args": ["rimraf", "node_modules/.cache"],
			"isBackground": false,
			"options": {
				"cwd": "meta/test"
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "compile:ipc",
			"type": "shell",
			"command": "pnpx",
			"args": ["tsc", "-p", "private/ipc/tsconfig.json"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "compile:adapter",
			"type": "shell",
			"command": "pnpx",
			"args": ["tsc", "-p", "extension/adapter/tsconfig.json"],
			"dependsOn": ["compile:ipc"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "compile:worker",
			"type": "shell",
			"command": "pnpx",
			"args": ["tsc", "-p", "extension/worker/tsconfig.json"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "package",
			"type": "shell",
			"command": "pnpx",
			"args": ["vsce", "package"],
			"dependsOn": ["clean:build", "rollup:production"],
			"dependsOrder": "sequence",
			"isBackground": false,
			"options": {
				"cwd": "meta/build/extension"
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}
