{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "lint",
			"type": "shell",
			"command": "npx",
			"args": [
				"eslint",
				"${file}"
			],
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "fix",
			"type": "shell",
			"command": "npx",
			"args": [
				"eslint",
				"--fix",
				"${file}"
			],
			"problemMatcher": [
				"$eslint-stylish"
			]
		}
	]
}
