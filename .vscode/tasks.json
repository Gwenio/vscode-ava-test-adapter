{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "lint",
			"type": "shell",
			"command": "pnpx",
			"args": ["eslint", "${file}"],
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "fix",
			"type": "shell",
			"command": "pnpx",
			"args": ["eslint", "--fix", "${file}"],
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "rollup-watch",
			"type": "shell",
			"command": "pnpx",
			"args": ["rollup", "-cw"],
			"isBackground": false,
			"options": {
				"cwd": "meta/build"
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "rollup-production",
			"type": "shell",
			"command": "pnpx",
			"args": ["rollup", "-c"],
			"dependsOn": ["compile"],
			"options": {
				"cwd": "meta/build",
				"env": {
					"NODE_ENV": "production"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "pnpm",
			"args": ["recursive", "clean"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clear-test-cache",
			"type": "shell",
			"command": "pnpx",
			"args": ["rimraf", "node_modules/.cache"],
			"isBackground": false,
			"options": {
				"cwd": "meta/test"
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "compile",
			"type": "shell",
			"command": "pnpx",
			"args": [
				"tsc",
				"-p",
				"private/ipc/tsconfig.json",
				"-p",
				"extension/adapter/tsconfig.json",
				"-p",
				"extension/worker/tsconfig.json"
			],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "package",
			"type": "shell",
			"command": "pnpx",
			"args": ["vsce", "package", "--yarn"],
			"dependsOn": ["compile", "rollup-production"],
			"isBackground": false,
			"options": {
				"cwd": "meta/build/extension"
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}
