{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "lint",
			"type": "shell",
			"command": "npx",
			"args": ["eslint", "${file}"],
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "fix",
			"type": "shell",
			"command": "npx",
			"args": ["eslint", "--fix", "${file}"],
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "rollup-watch",
			"type": "shell",
			"command": "npx",
			"args": ["rollup", "-cw"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "rollup-production",
			"type": "shell",
			"command": "npx",
			"args": ["rollup", "-c"],
			"dependsOn": ["compile"],
			"options": {
				"env": {
					"NODE_ENV": "production"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "npx",
			"args": ["rimraf", "tmp", "dist", "*.vsix"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clean-tests",
			"type": "shell",
			"command": "npx",
			"args": ["rimraf", "tmp/test"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clear-cache",
			"type": "shell",
			"command": "npx",
			"args": ["rimraf", "node_modules/.cache"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "reset-nyc",
			"type": "shell",
			"command": "npx",
			"args": ["rimraf", "node_modules/.cache/nyc", "tmp/nyc"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "compile",
			"type": "shell",
			"command": "npx",
			"args": ["tsc", "-p", "src/tsconfig.json"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "package",
			"type": "shell",
			"command": "npx",
			"args": ["vsce", "package", "--yarn"],
			"dependsOn": ["compile", "rollup-production"],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}
