{
	"root": true,
	"parserOptions": {
		"ecmaVersion": 10,
		"sourceType": "module",
		"ecmaFeatures": {
			"classes": true,
			"modules": true,
			"templateStrings": true,
			"impliedStrict": true,
			"arrowFunctions": true
		}
	},
	"env": {
		"node": true,
		"es6": true
	},
	"plugins": ["unicorn", "promise"],
	"extends": [
		"eslint:recommended",
		"plugin:node/recommended",
		"plugin:unicorn/recommended",
		"plugin:promise/recommended",
		"prettier"
	],
	"rules": {
		"new-parens": 2,
		"no-bitwise": 2,
		"no-console": 0,
		"no-debugger": 0,
		"node/no-unpublished-require": 0,
		"promise/always-return": 0,
		"promise/catch-or-return": 0,
		"unicorn/number-literal-case": "off",
		"unicorn/filename-case": [
			"error",
			{
				"cases": {
					"snakeCase": true
				}
			}
		]
	}
}
