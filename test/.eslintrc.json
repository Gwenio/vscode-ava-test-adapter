{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 10,
		"sourceType": "module",
		"ecmaFeatures": {
			"classes": true,
			"modules": true,
			"templateStrings": true,
			"impliedStrict": true,
			"arrowFunctions": true
		}
	},
	"plugins": ["@typescript-eslint", "ava"],
	"extends": ["plugin:@typescript-eslint/recommended", "plugin:ava/recommended", "prettier"],
	"settings": {
		"node": {
			"allowModules": ["sinon", "emittery", "delay"],
			"tryExtensions": [".d.ts", ".ts", ".js", ".json"]
		}
	},
	"rules": {
		"@typescript-eslint/member-delimiter-style": "off",
		"@typescript-eslint/indent": "off",
		"@typescript-eslint/semi": "off",
		"new-parens": 2,
		"no-bitwise": 2,
		"no-consecutive-blank-lines": "off",
		"no-console": 0,
		"@typescript-eslint/no-var-requires": "error",
		"node/no-unpublished-require": "error",
		"node/no-unsupported-features/es-syntax": 0,
		"@typescript-eslint/no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_",
				"caughtErrorsIgnorePattern": "^_"
			}
		],
		"@typescript-eslint/interface-name-prefix": "off",
		"ava/use-test": "off",
		"ava/no-ignored-test-files": [
			"error",
			{
				"files": ["unit/**", "worker/**", "mock/**"],
				"extensions": [".js", ".ts"],
				"helpers": ["../helpers/**"],
				"sources": ["../src/**"]
			}
		]
	}
}
