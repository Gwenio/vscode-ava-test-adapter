{
	"groups": {
		"repository": {
			"packages": ["package.json"]
		},
		"extension": {
			"packages": ["extension/worker/package.json", "extension/adapter/package.json"],
			"ignore": ["@types/vscode"]
		},
		"private": {
			"packages": ["private/ipc/package.json"]
		},
		"meta": {
			"packages": [
				"meta/deps/package.json",
				"meta/build/package.json",
				"meta/tests/package.json"
			]
		}
	},
	"ignore": ["rimraf"]
}
